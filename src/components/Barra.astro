---
interface props{
    title:string;
    href:string;
}

const { href, title } = Astro.props;
---
        
			<div class="barra">
				<a href={href}> 
					<h3>
						{title}
					</h3>
				</a>
			</div>
        <style>
			
        .barra{
		display: flex;
		margin-right: 5px;
		text-decoration: none;
		font-size: larger;
		font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial;
	}

	.barra >a{
		display: flex;
		text-decoration: none;
		margin-bottom: 10px;
		border-radius: 4px;
	}
        </style>