---
interface Props {
    title:string;
	href:string;

}

const{ href, title }= Astro.props;
---


    <div class="nav">
				<a {href}>
					<h3>
					{title}
					</h3>
				</a>
    </div>



<style>
    .nav{
	position: absolute;
	display: flex;
    left:8rem;
    gap: 38px;
    padding: 0px;
	font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    text-decoration: none;
	font-size: large;
    color: rgb(0, 0, 0);
	}

	.nav >a{
		color: rgb(255, 255, 255);
		display: flex;
		text-decoration: none;
		margin-bottom: 10px;
		border-radius: 4px;
		font-size: larger;
	}
        </style>
</style>