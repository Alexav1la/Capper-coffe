---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Barra from '../components/Barra.astro';
---

<Layout title="Comparative">
	<main>
		<div class="nav">
			<Barra
			href=""
			title="Inicio"
			/>
			
			<Barra 
				href="#lugares"
				title="Lugares"/>

			<Barra 
			href="#comidas"
			title="Comidas"	/>

			<Barra
			href="#contacto"
			title="contacto"/>
		
		</div>
		<br> <br>	
		<h1>Bienvenido a <span class="text-gradient">Comparative</span></h1>
		<p class="instructions">
			Bienvenido a <strong>Comparative</strong>, tu herramienta esencial para comparar precios de comidas y lugares en un solo lugar. 
		</p>
		
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				id='lugares'
				title="Documentation"
				body="Learn how Astro works and explore the official API docs."
			/>
			<Card
				href="https://astro.build/integrations/"
				id='lugares'
				title="Integrations"
				body="Supercharge your project with new frameworks and libraries."
			/>
			<Card
				href="https://astro.build/themes/"
				id='comida'
				title="Themes"
				body="Explore a galaxy of community-built starter themes."
			/>
			<Card
				href="https://astro.build/chat/"
				id='contacto'
				title="Community"
				body="Come say hi to our amazing Discord community. ❤️"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		position: relative;
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.nav{
		position: absolute;
		display: flex;
    margin-left: 16%;
    gap: 38px;
    padding: 0px;
    text-decoration: none;
    color: aliceblue;
	}
	
	
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
